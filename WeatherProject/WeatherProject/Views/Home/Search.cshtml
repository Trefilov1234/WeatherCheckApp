@model WeatherApiResponse
@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>
<div class="container">
    @if (ViewBag.ErrorMessage != null)
    {
        <h1 class="text-danger">@ViewBag.ErrorMessage</h1>
    }
    else if(!string.IsNullOrWhiteSpace(@ViewBag.LocationName))
    {
        string picture = "https://openweathermap.org/img/wn/"+@Model.weather[0].icon+".png";
        <p>Search results by location name: @ViewBag.LocationName</p>
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <img src="@picture" class="card-img" alt="..." style="width:100px;height:100px;"/>
                <div>@Model.weather[0].main</div>
                <div>@Model.weather[0].description</div>
                <div>Temperature: @Convert.ToInt32(@Model.main.temp)°</div>
                <div>Max temperature: @Convert.ToInt32(@Model.main.temp_max)°</div>
                <div>Min temperature: @Convert.ToInt32(@Model.main.temp_min)°</div>
                <div>Feels like: @Convert.ToInt32(@Model.main.feels_like)°</div>
                <div>Pressure: @Model.main.pressure</div>
            </div>
        </div>
    }
    else
    {
        <p>No results</p>
    }
</div>
